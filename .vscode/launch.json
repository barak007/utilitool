  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Test",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
      "args": ["test/**.spec.ts", "-r", "@ts-tools/node/r"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
      "args": ["${file}", "-r", "@ts-tools/node/r"]
    }
  ]
}
